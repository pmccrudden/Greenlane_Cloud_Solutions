FROM node:20-alpine

# Create app directory
WORKDIR /app

# Install app dependencies
COPY package.json ./
RUN npm install --only=production

# Bundle app source
COPY app.js ./

# Set environment variables
ENV NODE_ENV=production
ENV PORT=8080

# Expose the port
EXPOSE 8080

# Start the application with the simple app.js
CMD ["node", "app.js"]